<% if current_user.like?(info) %>
  <%= form_with(model: current_user.favorites.find_by(info_id: info.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :info_id, info.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-secondary btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :info_id, info.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-warning btn-sm' %>
  <% end %>
<% end %>
